#!/usr/bin/env bash

# Active Colors
red='#ff0000'
gray='#9c9c9c'

wifi="$(nmcli device | grep connected | awk '$2=="wifi" {print $1}')"
ethernet="$(nmcli device | grep connected | awk '$2=="ethernet" {print $1}')"

case "$1" in
    --toggle)
        if [ -z "$wifi" ]; then
            nmcli radio wifi on &
        else
            nmcli radio wifi off &
        fi
        ;;
    *)
        if [ -z "$wifi" ]; then
            echo "%{F$gray}якй"
        else
            echo "яки"
        fi
        ;;
esac